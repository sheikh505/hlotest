<p id="notice"><%= notice %></p>

<h1>Cllasses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cllasses.each do |cllass| %>
      <tr>
        <td><%= cllass.name %></td>
        <td><%= link_to 'Show', cllass %></td>
        <td><%= link_to 'Edit', edit_cllass_path(cllass) %></td>
        <td><%= link_to 'Destroy', cllass, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cllass', new_cllass_path %>
